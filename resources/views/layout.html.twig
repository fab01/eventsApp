<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}IIM Events Manager{% endblock %}
        </title>
        {% block styles %}
            <link rel="stylesheet" href="{{ assets('bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}" />
            <link rel="stylesheet" href="{{ assets('font-awesome/css/font-awesome.css') }}">
            <link rel="stylesheet" href="{{ assets('bootstrap/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ assets('bootstrap/css/bootstrapyeti.css') }}" />
            <link rel="stylesheet" href="{{ assets('styles/custom.css') }}">
            <script src="{{ assets('ckeditor/ckeditor.js') }}"></script>
        {% endblock %}

    </head>

    <body>
        <!-- **/ NAVBAR \** -->
        {% include 'blocks/navigation/navigation.html.twig' %}

        <div class="container">

            {% include 'blocks/confirmDelete.html.twig' %}
            {% include 'blocks/noticeMessages.html.twig' %}

            {% block body %}{% endblock %}

        </div>

        {% block scripts %}
            <script src="{{ assets('jquery/dist/jquery.js') }}"></script>
            <script src="{{ assets('bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ assets('bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
            <script src="{{ assets('scripts/custom.js') }}"></script>
        {% endblock %}
    </body>
</html>