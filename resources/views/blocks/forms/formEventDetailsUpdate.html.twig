<div class="row">

    <div class="col-md-12">
        <a href="{{ path_for('event.details', {'eid' : subscriber.event_id}) }}" class="btn btn-md btn-info pull-right"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Back to the list</a>
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading"><h2>{{ form_title }}</h2></div>
            <div class="panel-body">
                <form action="{{ path_for(form_action, {'id' : id}) }}" method="post" autocomplete="off">

                    <h4>
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                        {{ subscriber.name|lower|capitalize }}
                        {{ subscriber.surname|lower|capitalize }}
                    </h4>

                    <!--/   ACCOMMODATIONS   \-->
                    <div class="{{ errors.accommodations ? 'has-error' : '' }}">
                        {{ form.accommodations | raw }}
                        {% if errors.accommodations %}
                            <span class="help-block">{{ errors.accommodations | first }}</span>
                        {% endif %}
                    </div>
                    <span class="help-block"></span>

                    <!--/   ONE NIGHT DATE   \-->
                    <div class="{{ errors.one_night ? 'has-error' : '' }}">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar fa-lg"></i></span>
                            {{ form.one_night | raw }}
                        </div>
                        {% if errors.one_night %}
                            <span class="help-block">{{ errors.one_night | first }}</span>
                        {% endif %}
                    </div>
                    <span class="help-block"></span>

                    <!--/   SUBMIT   \-->
                    <input type="submit" value="{{ form_submit }}" class="btn btn-lg btn-primary"/>

                    <!--/   ID (if Edit/Update)   \-->
                    {{ form.id | raw }}
                    <!--/   ID (if Edit/Update)   \-->
                    {{ form.eid | raw }}

                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
</div>
