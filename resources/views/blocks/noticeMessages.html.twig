{% if flash.getMessage('success') %}
    <div class="alert alert-success">
        <h3><i class="fa fa-check" aria-hidden="true"></i> Successful!</h3>
        <h6 style="padding-left: 30px;">{{ flash.getMessage('success') | first }}</h6>
    </div>
{% endif %}

{% if flash.getMessage('warning') %}
    <div class="alert alert-warning">
        <h3><i class="fa fa-bell-o" aria-hidden="true"></i> Warning!</h3>
        <h6 style="padding-left: 30px;">{{ flash.getMessage('warning') | first }}</h6>
    </div>
{% endif %}

{% if flash.getMessage('error') %}
    <div class="alert alert-danger">
        <h3><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Error!</h3>
        <h6 style="padding-left: 30px;">{{ flash.getMessage('error') | first }}</h6>
    </div>
{% endif %}

{% if flash.getMessage('info') %}
    <div class="alert alert-info">
        <h3><i class="fa fa-info-circle" aria-hidden="true"></i> Info.</h3>
        <h6 style="padding-left: 30px;">{{ flash.getMessage('info') | first }}</h6>
    </div>
{% endif %}